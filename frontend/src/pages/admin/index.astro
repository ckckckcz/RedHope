---
import Layout from "../../layouts/Layout.astro"
import Sidebar from "../../components/Admin/UI/Sidebar.astro";
import Navbar from "../../components/Admin/UI/Navbar.astro"
import Card from "../../components/Admin/components/Card.astro";
import { cards } from "../../data/Admin/card";
import { tableData } from "../../data/Admin/tableDonor";

const indexCard = cards.filter((card) => card.file === "dashboard");
---

<Layout>
    <Navbar /> 
    <Sidebar />
    <div class="p-4 sm:ml-64">
        <div class="p-4 mt-14">
            <div class="lg:grid lg:grid-cols-3 flex flex-col gap-5 justify-between">
                {indexCard.map((card, index) => (
                    <Card key={index} icon={card.icon} label={card.label} value={card.value} />
                ))}
            </div>
            <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
            <div class="relative overflow-x-auto shadow-md rounded-2xl">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                        <th scope="col" class="px-6 py-3 text-sm">Product name</th>
                        <th scope="col" class="px-6 py-3 text-sm">Color</th>
                        <th scope="col" class="px-6 py-3 text-sm">Category</th>
                        <th scope="col" class="px-6 py-3 text-sm">Price</th>
                        <th scope="col" class="px-6 py-3 text-sm">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {tableData.map((item, index) => (
                        <tr
                            class={`${
                            index % 1  === 0
                                ? "odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800"
                                : "border-b dark:border-gray-700 border-gray-200"
                            }`}
                        >
                            <th
                            scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                            >
                            {item.productName}
                            </th>
                            <td class="px-6 py-4">{item.color}</td>
                            <td class="px-6 py-4">{item.category}</td>
                            <td class="px-6 py-4">{item.price}</td>
                            <td class="px-6 py-4">
                            <button
                                type="button"
                                class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
                            >
                                Edit
                            </button>
                            </td>
                        </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</Layout>