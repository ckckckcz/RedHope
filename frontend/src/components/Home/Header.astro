---
import user1 from "../../assets/img/patient/user1.png";
import user2 from "../../assets/img/patient/user2.png";
import user3 from "../../assets/img/patient/user3.png";
import doctor from "../../assets/img/doctor.png";
---
<section class="bg-transparent">
    <div class="mx-auto max-w-screen-3xl">
        <div class="grid md:grid-cols-2 lg:min-h-screen lg:px-20">
            <div class="lg:text-center bg-no-repeat bg-cover lg:p-10 p-5 flex flex-col lg:justify-center lg:items-center items-start">
                <a href="#" class="inline-flex justify-between items-center py-1 px-1 pe-4 text-sm text-red-700 bg-white bg-opacity-50 rounded-full font-bold">
                    <span class="text-xs bg-white rounded-full text-red-700 px-4 py-1.5 me-3 bg-opacity-60">New</span> 
                    <span class="lg:text-sm text-xs font-bold">Best Blood Donors Service</span> 
                    <svg class="w-2.5 h-2.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                </a>
                <h1 class="lg:text-7xl text-4xl lg:mt-5 lg:mb-5 mt-5 mb-5 font-bold text-white lg:pr-10 lg:pl-10 pr-0 pl-0">Get Premium Blood Donors for your best health</h1>
                <h5 class="lg:text-lg lg:pr-16 lg:pl-16 text-xs font-semibold lg:mb-15 mb-5 text-white opacity-60">Our doors are open for many years, we give you special discount on your first visit. we also providing different type of medical service.</h5>
                <button type="button" class="text-white flex gap-4 bg-red-800 bg-no-repeat bg-center font-medium rounded-full text-md lg:pl-7 lg:pr-3 pl-5 pr-2 justify-center items-center lg:py-3 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 lg:mb-14 mb-5">
                    Make a schedule
                    <svg class="w-8 h-8 text-red-700 rounded-full p-1 bg-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5m14 0-4 4m4-4-4-4"/>
                    </svg>
                </button>
                <div class="w-full ml-0 gap-2  text-left lg:items-center lg:justify-center flex-col flex">
                    <p class="font-bold text-white lg:text-2xl">Happy Patient</p>
                    <div class="flex -space-x-4 rtl:space-x-reverse">
                        <img class="w-10 h-10 border-2 border-white rounded-full object-cover" src={user1.src} alt="">
                        <img class="w-10 h-10 border-2 border-white rounded-full object-cover" src={user2.src} alt="">
                        <img class="w-10 h-10 border-2 border-white rounded-full object-cover" src={user3.src} alt="">
                        <a class="flex items-center justify-center w-10 h-10 text-xs font-medium text-white bg-red-700 border-2 border-white rounded-full hover:bg-red-800 dark:border-green-800" href="#">+99</a>
                    </div>                    
                </div>
            </div>                        
            <div class="inset-0 bg-white bg-opacity-50 backdrop-blur-lg border-2 border-gray-300 rounded-[50px] h-[800px] w-[750px] mt-20 items-center justify-center flex relative lg:block hidden">
                <img src={doctor.src} alt="" class="w-[780px] rounded-2xl h-full object-cover z-20">
                <div class="bg-white bg-opacity-30 rounded-full flex-row lg:gap-5 gap-3 lg:py-10 lg:px-7 py-8 px-5 backdrop-blur-md z-30 h-10 absolute bottom-1 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center">
                    <div class="videoCall">
                        <svg class="lg:w-12 lg:h-12 w-9 h-9 p-2 text-black bg-white rounded-full lg:p-3 hover:bg-gray-200 cursor-pointer" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 6H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1Zm7 11-6-2V9l6-2v10Z"/>
                        </svg>
                    </div>
                    <div class="videoCall">
                        <svg class="lg:w-14 lg:h-14 w-12 h-12 p-2 text-white bg-red-600 hover:bg-red-700 cursor-pointer rounded-full lg:p-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.693 16.013H7.31a1.685 1.685 0 0 0 1.685-1.684v-.645A1.684 1.684 0 0 1 10.679 12h2.647a1.686 1.686 0 0 1 1.686 1.686v.646c0 .446.178.875.494 1.19.316.317.693.495 1.14.495h1.685a1.556 1.556 0 0 0 1.597-1.016c.078-.214.107-.776.088-1.002.014-4.415-3.571-6.003-8-6.004-4.427 0-8.014 1.585-8.01 5.996-.02.227.009.79.087 1.003a1.558 1.558 0 0 0 1.6 1.02Z"/>
                        </svg>                          
                    </div>
                    <svg class="lg:w-12 lg:h-12 w-9 h-9 p-2 text-black bg-white rounded-full lg:p-3 hover:bg-gray-200 cursor-pointer" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9v3a5.006 5.006 0 0 1-5 5h-4a5.006 5.006 0 0 1-5-5V9m7 9v3m-3 0h6M11 3h2a3 3 0 0 1 3 3v5a3 3 0 0 1-3 3h-2a3 3 0 0 1-3-3V6a3 3 0 0 1 3-3Z"/>
                    </svg>                      
                </div>                  
            </div>                     
        </div>
    </div>
</section>
