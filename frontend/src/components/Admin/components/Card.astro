---
import type { Card } from "../../../lib/ts/Admin/cards";
const { icon, label, value } = Astro.props;
---

<div class="lg:p-6 p-4 bg-white border-2 border-gray-200 rounded-2xl dark:bg-gray-800 dark:border-gray-700">
  <div set:html={icon}></div>
  <p class="font-semibold lg:text-sm text-xs text-gray-500 dark:text-gray-400">{label}</p>
  <h5 class="lg:text-3xl text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{value}</h5>
</div>
