---
import { userData } from '../../../data/Admin/tableUser';
---
<div class="relative overflow-x-auto border-2 border-gray-200 rounded-2xl">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-5 py-4 lg:text-lg text-sm font-bold text-gray-900 whitespace-nowrap dark:text-white">Name</th>
                <th scope="col" class="px-5 py-4 lg:text-lg text-sm font-bold text-gray-900 whitespace-nowrap dark:text-white">Blood Type</th>
                <th scope="col" class="px-5 py-4 lg:text-lg text-sm font-bold text-gray-900 whitespace-nowrap dark:text-white">Phone Number</th>
                <th scope="col" class="px-5 py-4 lg:text-lg text-sm font-bold text-gray-900 whitespace-nowrap dark:text-white">Status</th>
                <th scope="col" class="px-5 py-4 lg:text-lg text-sm font-bold text-gray-900 whitespace-nowrap dark:text-white">Action</th>
            </tr>
        </thead>
        <tbody>
            {userData.map((data, index) => (
            <tr class={`${index % 1 === 0 ? "odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800" : "border-b dark:border-gray-700 border-gray-200"}`}>
                <th scope="row" 
                    class="px-5 py-2 text-sm sm:text-base font-medium text-gray-600 whitespace-nowrap dark:text-white">
                    {data.name}
                </th>
                <td class="px-5 py-2 text-sm sm:text-base font-medium text-gray-600 whitespace-nowrap dark:text-white">{data.bloodType}</td>
                <td class="px-5 py-2 text-sm sm:text-base font-medium text-gray-600 whitespace-nowrap dark:text-white">{data.phoneNumber}</td>
                <td class="px-5 py-2 text-sm sm:text-base font-medium text-gray-600 whitespace-nowrap dark:text-white">
                    <span class={data.status === 'Active' ? 'text-green-500' : 'text-red-500'}>
                        {data.status}
                    </span>
                </td>
                <td class="px-5 py-2 text-sm sm:text-base font-medium text-gray-600 whitespace-nowrap dark:text-white">
                    <a href="">
                        <button type="button" 
                                class="text-gray-600 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-4 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
                            Details
                        </button>
                    </a>
                </td>
            </tr>
            ))}
        </tbody>
    </table>
</div>  